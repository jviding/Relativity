{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminUsernameBastionVm": {
            "type": "string"
        },
        "adminPasswordBastionVm": {
            "type": "securestring"
        },
        "storageAccountName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "networks",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "linked-templates/networks.json"
                }
            }
        },
        {
            "name": "storage",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','networks')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "linked-templates/storage.json"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "internalSubnetID": {
                        "value": "[reference('networks').outputs.internalSubnetID.value]"
                    }
                }
            }
        },
        {
            "name": "bastion",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','networks')]",
                "[resourceId('Microsoft.Resources/deployments','storage')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "linked-templates/bastion.json"
                },
                "parameters": {
                    "adminUsername": {
                        "value": "[parameters('adminUsernameBastionVm')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPasswordBastionVm')]"
                    },
                    "bastionSubnetID": {
                        "value": "[reference('networks').outputs.bastionSubnetID.value]"
                    },
                    "internalSubnetID": {
                        "value": "[reference('networks').outputs.internalSubnetID.value]"
                    },
                    "diagnosticsStorageUri": {
                        "value": "[reference('storage').outputs.diagnosticsStorageUri.value]"
                    }
                }
            }            
        },
        {
            "name": "registry",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments','networks')]",
                "[resourceId('Microsoft.Resources/deployments', 'storage')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "linked-templates/registry.json"
                },
                "parameters": {
                    "internalSubnetID": {
                        "value": "[reference('networks').outputs.internalSubnetID.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}