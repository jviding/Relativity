{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vaultName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24
        },
        "vnetName": {
            "type": "string"
        },
        "vnetID": {
            "type": "string"
        },
        "subnetInternalID": {
            "type": "string"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "tenantID": "[subscription().tenantId]",
        "vaultID": "[resourceId('Microsoft.KeyVault/vaults',parameters('vaultName'))]",
        "privateEndpointName": "vaultPrivateEndpoint",
        "privateEndpointID": "[resourceId('Microsoft.Network/privateEndpoints',variables('privateEndpointName'))]",
        "privateDnsZoneName": "privatelink.vaultcore.azure.net",
        "privateDnsZoneID": "[resourceId('Microsoft.Network/privateDnsZones', variables('privateDnsZoneName'))]",
        "privateDnsZoneGroupName": "vaultPrivateDnsZoneGroup",
        "virtualNetworkLinkName": "[concat(variables('privateDnsZoneName'),'/link_to_',parameters('vnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "apiVersion": "2021-04-01-preview",
            "name": "[parameters('vaultName')]",
            "location": "[variables('location')]",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "accessPolicies": [],
                "networkAcls": {
                    "bypass": "AzureServices",
                    "defaultAction": "Deny",
                    "ipRules": [],
                    "virtualNetworkRules": []
                },
                "tenantId": "[variables('tenantID')]",
                "publicNetworkAccess": "disabled",
                "enabledForDeployment": false,
                "enabledForTemplateDeployment": false,
                "enabledForDiskEncryption": false,
                "enableRbacAuthorization": false,
                "enablePurgeProtection": true,
                "enableSoftDelete": true,
                "softDeleteRetentionInDays": 7,
                "provisioningState": "Succeeded"
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[variables('privateDnsZoneName')]",
            "location": "global",
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[variables('virtualNetworkLinkName')]",
            "location": "global",
            "dependsOn": [
                "[variables('privateDnsZoneID')]"
            ],
            "properties": {
                "registrationEnabled": false,
                "virtualNetwork": {
                    "id": "[parameters('vnetID')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-11-01",
            "name": "[variables('privateEndpointName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('vaultID')]",
                "[variables('privateDnsZoneID')]"
            ],
            "properties": {
                "subnet": {
                    "id": "[parameters('subnetInternalID')]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('privateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('vaultID')]",
                            "groupIds": [
                                "vault"
                            ]
                        }
                    }
                ]
            },
            "resources": [
                {
                    "type": "privateDnsZoneGroups",
                    "apiVersion": "2020-11-01",
                    "name": "[variables('privateDnsZoneGroupName')]",
                    "location": "[variables('location')]",
                    "dependsOn": [
                        "[variables('privateEndpointID')]"
                    ],
                    "properties": {
                        "privateDnsZoneConfigs": [
                            {
                                "name": "dnsConfig",
                                "properties": {
                                    "privateDnsZoneId": "[variables('privateDnsZoneID')]"
                                }
                            }
                        ]
                    }
                }
            ]
        }
    ],
    "outputs": {}
}