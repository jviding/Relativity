{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "registryName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24
        },
        "vnet": {
            "type": "string"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "registryID": "[resourceId('Microsoft.ContainerRegistry/registries',parameters('registryName'))]",
        "subnetID": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnet').name,parameters('vnet').subnets.subnetPrivateInternal.name)]",
        "privateEndpointName": "registryPrivateEndpoint",
        "privateEndpointID": "[resourceId('Microsoft.Network/privateEndpoints',variables('privateEndpointName'))]",
        "privateDnsZoneName": "privatelink.azurecr.io",
        "privateDnsZoneGroupName": "[concat(variables('privateEndpointName'),'/registryPrivateDnsZoneGroup')]"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerRegistry/registries",
            "apiVersion": "2020-11-01-preview",
            "name": "[parameters('registryName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Premium"
            },
            "properties": {
                "adminUserEnabled": false,
                "publicNetworkAccess": "Disabled",
                "anonymousPullEnabled": false,
                "dataEndpointEnabled": true,
                "networkRuleBypassOptions": "AzureServices",
                "networkRuleSet": {
                    "defaultAction": "Deny"
                },
                "policies": {
                    "quarantinePolicy": {
                        "status": "disabled"
                    },
                    "trustPolicy": {
                        "type": "Notary",
                        "status": "disabled"
                    },
                    "retentionPolicy": {
                        "days": 7,
                        "status": "enabled"
                    }
                },             
                "encryption": {
                    "status": "disabled"
                },
                "zoneRedundancy": "Disabled"
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-11-01",
            "name": "[variables('privateEndpointName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('registryID')]"
            ],
            "properties": {
                "subnet": {
                    "id": "[variables('subnetID')]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('privateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('registryID')]",
                            "groupIds": [
                                "registry"
                            ]
                        }
                    }
                ]
            }
        },
        {
            // Add private DNS record for privateEndpoint
            "name": "dns-registry",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[variables('registryID')]",
                "[variables('privateEndpointID')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "dns.json"
                },
                "parameters": {
                    "privateDnsZoneName": {
                        "value": "[variables('privateDnsZoneName')]"
                    },
                    "privateDnsZoneGroupName": {
                        "value": "[variables('privateDnsZoneGroupName')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnet').name]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}