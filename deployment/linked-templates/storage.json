{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24
        },
        "vnet": {
            "type": "object"
        }
    },
    "variables": {
        "location": "[resourceGroup().location]",
        "storageAccountID": "[resourceId('Microsoft.Storage/storageAccounts',parameters('storageAccountName'))]",
        "subnetID": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('vnet').name,parameters('vnet').subnets.subnetPrivateInternal.name)]",
        "privateEndpointName": "blobPrivateEndpoint",
        "privateEndpointID": "[resourceId('Microsoft.Network/privateEndpoints',variables('privateEndpointName'))]",
        "privateDnsZoneName": "privatelink.blob.core.windows.net",
        "privateDnsZoneGroupName": "[concat(variables('privateEndpointName'),'/blobPrivateDnsZoneGroup')]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[variables('location')]",
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "properties": {
                "allowBlobPublicAccess": false
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-11-01",
            "name": "[variables('privateEndpointName')]",
            "location": "[variables('location')]",
            "dependsOn": [
                "[variables('storageAccountID')]"
            ],
            "properties": {
                "subnet": {
                    "id": "[variables('subnetID')]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[variables('privateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[variables('storageAccountID')]",
                            "groupIds": [
                                "blob"
                            ]
                        }
                    }
                ]
            }
        },
        {
            // Add private DNS record for private endpoint
            "name": "dns-blob",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "dependsOn": [
                "[variables('storageAccountID')]",
                "[variables('privateEndpointID')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "relativePath": "dns.json"
                },
                "parameters": {
                    "privateDnsZoneName": {
                        "value": "[variables('privateDnsZoneName')]"
                    },
                    "privateDnsZoneGroupName": {
                        "value": "[variables('privateDnsZoneGroupName')]"
                    },
                    "vnetName": {
                        "value": "[parameters('vnet').name]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "storageUris": {
            "type": "object",
            "value": {
                "blob": "[reference(variables('storageAccountID')).primaryEndpoints.blob]"
                //"blob": "[concat('https://',parameters('storageAccountName'),'.',variables('privateDnsZoneName'))]"
            }
        }
    }
}