{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {
        "location": "[resourceGroup().location]",
        "vnetName": "virtualNetworks",
        "vnetCIDR": "10.0.0.0/16",
        "subnetAppGwName": "subnetPublicAppGw",
        "subnetAppGwCIDR": "10.0.0.0/24",
        "subnetBastionName": "AzureBastionSubnet",
        "subnetBastionCIDR": "10.0.1.0/24",
        "subnetInternalName": "subnetPrivateInternal",
        "subnetInternalCIDR": "10.0.10.0/24",
        "subnetClusterName": "subnetPrivateCluster",
        "subnetClusterCIDR": "10.0.11.0/24",
        "privateDnsZoneName": "privateDnsZone",
        "vnetID":  "[resourceId('Microsoft.Network/virtualNetworks',variables('vnetName'))]",
        "privateDnsZoneID": "[resourceId('Microsoft.Network/privateDnsZones',variables('privateDnsZoneName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-11-01",
            "name": "[variables('vnetName')]",
            "location": "[variables('location')]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('vnetCIDR')]"
                    ]
                },
                "enableDdosProtection": false,
                "enableVmProtection": false,
                "subnets": [
                    {
                        "name": "[variables('subnetAppGwName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetAppGwCIDR')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    },
                    {
                        "name": "[variables('subnetBastionName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetBastionCIDR')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    },
                    {
                        "name": "[variables('subnetInternalName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetInternalCIDR')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    },
                    {
                        "name": "[variables('subnetClusterName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetClusterCIDR')]",
                            "privateEndpointNetworkPolicies": "Disabled",
                            "privateLinkServiceNetworkPolicies": "Disabled"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "name": "[variables('privateDnsZoneName')]",
            "location": "global",
            "dependsOn": [
                "[variables('vnetID')]"
            ],
            "properties": {}
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(variables('privateDnsZoneName'),'/link_to_',variables('vnetName'))]",
            "location": "global",
            "dependsOn": [
                "[variables('privateDnsZoneID')]"
            ],
            "properties": {
                "registrationEnabled": false,
                "virtualNetwork": {
                    "id": "[variables('vnetID')]"
                }
            }
        }
    ],
    "outputs": {
        "vnetID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
        },
        "subnetAppGwID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetAppGwName'))]"
        },
        "subnetBastionID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetBastionName'))]"
        },
        "subnetInternalID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetInternalName'))]"
        },
        "subnetClusterID": {
            "type": "string",
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetClusterName'))]"
        },
        "privateDnsZoneID": {
            "type": "string",
            "value": "[variables('privateDnsZoneID')]"
        }
    }
}